<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape>
            <solid android:color="#AACC66" />

            <stroke android:width="1dp" android:color="#AACC66" />

            <corners android:radius="25dp" />

            <padding android:bottom="0dp" android:left="4dp" android:right="10dp" android:top="0dp" />
        </shape></item>
    <item><shape>
            <gradient android:angle="270" android:endColor="#AACC66" android:startColor="#D3E992" />

            <stroke android:width="1dp" android:color="#AACC66" />

            <corners android:radius="25dp" />

            <padding android:bottom="0dp" android:left="4dp" android:right="10dp" android:top="0dp" />
        </shape></item>

</selector>