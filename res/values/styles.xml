<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Theme.Styled" parent="Theme.Sherlock.Light.DarkActionBar">
        <item name="actionBarStyle">@style/Widget.Styled.ActionBar</item>
    </style>

    <style name="Theme.Styled.WithDarkSpinner" parent="Theme.Styled">

        <!-- <item name="android:spinnerStyle">@style/DarkSpinner</item> -->
        <item name="android:spinnerItemStyle">@style/DarkSpinnerItem</item>
        <item name="android:spinnerDropDownItemStyle">@style/DarkSpinnerDropDownItem</item>
    </style>

    <style name="Widget.Styled.ActionBar" parent="Widget.Sherlock.Light.ActionBar.Solid.Inverse">
        <!-- <item name="background">@drawable/bg_striped</item> -->
        <!-- <item name="android:background">@drawable/bg_striped</item> -->
        <!-- <item name="backgroundSplit">@drawable/bg_striped_split</item> -->
        <!-- <item name="android:backgroundSplit">@drawable/bg_striped_split</item> -->
    </style>

    <!-- TEXT -->
    <style name="StyledText">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="TextDark">
        <item name="android:textColor">#999999</item>
    </style>

    <style name="TextTitle">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#222222</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextItem">
        <item name="android:textSize">20sp</item>
<!--         <item name="android:textColor">#222222</item> -->
    </style>
    
    <style name="TextInput">
        <item name="android:textSize">25sp</item>
    </style>
    
    <style name="TextInputSmall">
        <item name="android:textSize">20sp</item>
    </style>
    
    

    <style name="MenuTitle">
        <item name="android:layout_margin">15dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#222222</item>
        <item name="android:textSize">40sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">#AAAAAA</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- LAYOUTS -->
    <style name="BaseLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/light_green</item>
    </style>

    <!-- BUTTONS -->
    <style name="BaseButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/menu_button</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#222222</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="MenuButton" parent="BaseButton">
        <item name="android:background">@drawable/menu_button</item>
        <item name="android:textSize">22sp</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="TooltipsButton" parent="BaseButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:background">@drawable/help_button</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#444444</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:drawableLeft">@drawable/ic_action_help_light</item>
    </style>

    <!-- SPINNERS -->
    <style name="DarkSpinner">
        <item name="android:popupBackground">@null</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="DarkSpinnerItem">

        <!-- <item name="android:background">@drawable/dark_spinner</item> -->
        <item name="android:textColor">#999999</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="DarkSpinnerDropDownItem">

        <!-- <item name="android:background">@drawable/dark_spinner</item> -->
        <item name="android:textColor">#999999</item>
        <item name="android:gravity">center</item>
    </style>

</resources>